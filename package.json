{
  "name": "etherleybot",
  "version": "1.0.0",
  "description": "The most reliable Ethereum bot",
  "main": "dist/src/server.js",
  "scripts": {
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "tsc",
    "start": "node .",
    "dev:build": "npm run build; npm run start",
    "dev:test": "NODE_ENV=test ./node_modules/.bin/nodemon --exec npm run test --ignore dist --watch src --watch test --watch node_modules --ext ts",
    "test": "npm run build; node dist/test/index.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^6.2.0",
    "module-alias": "^2.1.0",
    "eth-ens-namehash": "^2.0.8",
    "ethers": "^4.0.23",
    "express": "^4.16.4",
    "jsonfile": "^5.0.0",
    "telegraf": "^3.27.0",
    "web3": "^1.0.0-beta.41"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/express": "^4.16.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.12.21",
    "chai": "^4.2.0",
    "codelyzer": "^4.5.0",
    "nodemon": "^1.18.10",
    "openzeppelin-solidity": "^2.1.2",
    "ts-node": "^8.0.2",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.12.1",
    "typescript": "^3.3.1"
  },
  "_moduleAliases": {
    "@root": ".",
    "@update": "dist/src/update",
    "@eth": "dist/src/eth",
    "@contract": "dist/src/contract",
    "@abi": "dist/build/contracts",
    "@command": "dist/src/command",
    "@lib": "dist/src/lib",
    "@test": "dist/test"
  },
  "engines": {
    "node": "10.x",
    "npm": "6.x"
  },
  "nodemonConfig": {
    "ignore": [
      "dist/*"
    ]
  }
}
