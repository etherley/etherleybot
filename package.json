{
  "name": "etherleybot",
  "version": "1.0.0",
  "description": "The most reliable Ethereum bot",
  "main": "dist/server.js",
  "scripts": {
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "tsc",
    "start": "node .",
    "dev:build": "npm run build; npm run start",
    "dev:watch": "NODE_ENV=dev ./node_modules/.bin/nodemon --exec npm run dev:build --watch src --watch node_modules --ext ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^6.2.0",
    "module-alias": "^2.1.0",
    "eth-ens-namehash": "^2.0.8",
    "ethers": "^4.0.23",
    "express": "^4.16.4",
    "jsonfile": "^5.0.0",
    "telegraf": "^3.27.0",
    "web3": "^1.0.0-beta.41"
  },
  "devDependencies": {
    "@types/express": "^4.16.1",
    "@types/node": "^10.12.21",
    "codelyzer": "^4.5.0",
    "nodemon": "^1.18.10",
    "tslint": "^5.12.1",
    "typescript": "^3.3.1"
  },
  "_moduleAliases": {
    "@update": "./dist/@update",
    "@eth": "./dist/@eth",
    "@contract": "./dist/@contract",
    "@abi": "./dist/@abi",
    "@command": "./dist/@command",
    "@lib": "./dist/@lib"
  },
  "engines": {
    "node": "10.x",
    "npm": "6.x"
  },
  "nodemonConfig": {
    "ignore": [
      "dist/*"
    ]
  }
}
